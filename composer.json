{
    "name": "survos/grid-bundle",
    "description": "incorporate DatatablesNet, using twig and stimulus, twig_component requires ^2.2",
    "keywords": ["symfony-ux", "symfony6"],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "type": "symfony-bundle",
    "license": "MIT",

    "authors": [
        {
            "name": "Tac Tacelosky",
            "email": "tacman@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "api-platform/core": "^2.6",
        "friendsofsymfony/jsrouting-bundle": "^3.1",
        "symfony/config": "^6.1",
        "symfony/dependency-injection": "^6.1",
        "symfony/http-kernel": "^6.1",
        "symfony/ux-twig-component": "^2.2",
        "twig/twig": "^2 || ^3.4",
        "doctrine/persistence": "^2.0 || ^3.0",
        "doctrine/orm": "^2.12"
    },
    "autoload": {
        "psr-4": {
            "Survos\\Grid\\": "src/"
        }
    },
    "scripts": {
        "phpstan": "vendor/bin/phpstan analyse"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.7",
        "symfony/browser-kit": "^6.1",
        "symfony/framework-bundle": "^6.1",
        "symfony/phpunit-bridge": "^6.1",
        "symfony/twig-bundle": "^6.1",
        "symfony/var-dumper": "^6.1",
        "symfony/webpack-encore-bundle": "^1.11"
    }


}
